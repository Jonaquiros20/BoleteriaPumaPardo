@{
    ViewData["Title"] = "Seleccionar Vendedor";
}

<div class="container my-5">
    <h1 class="text-center">Seleccione un Vendedor</h1>
    <form method="post" action="/Home/SetVendedor" class="text-center mt-4">
        <div class="mb-3">
            <label for="vendedor" class="form-label">Vendedor:</label>
            <select id="vendedor" name="vendedor" class="form-select w-50 mx-auto" required>
                <option value="">-- Seleccione un Vendedor --</option>
                <option value="Kiara">Kiara</option>
                <option value="Allan">Allan</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Seleccionar</button>
    </form>
</div>
