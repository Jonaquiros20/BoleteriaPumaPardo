@{
    ViewBag.Title = "Inicio - Puma Pardo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="background-gradient"></div> <!-- Fondo suave minimalista -->

    <div class="container text-center mt-5">
        <h1 class="text-primary mb-4 animate-title">Puma Pardo</h1>
        <p>Selecciona una opción para continuar:</p>
        <div class="row mt-4 justify-content-center">
            <!-- Oficina -->
            <div class="col-md-2">
                <a asp-controller="Oficina" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-primary text-white shadow card-hover">
                        <div class="card-body text-center">
                            <i class="fas fa-building" style="font-size: 2.5rem;"></i>
                            <p class="mt-2">Oficina</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Inventario -->
            <div class="col-md-2">
                <a asp-controller="Inventario" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-primary text-white shadow card-hover">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-truck-fast" style="font-size: 2.5rem;"></i>
                            <p class="mt-2">Inventario</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Boletería -->
            <div class="col-md-2">
                <a asp-controller="Facturas" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-success text-white shadow card-hover">
                        <div class="card-body text-center">
                            
                            <i class="fa-solid fa-file-invoice" style="font-size: 2.5rem;"></i>
                            <p class="mt-2">Facturas</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Facturas -->
            <div class="col-md-2">
                <a asp-controller="CierreDeCaja" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-secondary text-white shadow card-hover">
                        <div class="card-body text-center">
                        
                            <i class="fa-solid fa-cash-register" style="font-size: 2.5rem;"></i>
                            <p class="mt-2">Cierre de Caja</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Equipo Puma -->
            <div class="col-md-2">
                <a asp-controller="EquipoPuma" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-info text-white shadow card-hover">
                        <div class="card-body text-center">
                            <i class="fas fa-users" style="font-size: 2.5rem;"></i>
                            <p class="mt-2">Administración Puma</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Unidades de Bus -->
            <div class="col-md-2">
                <a asp-controller="UnidadesDeBus" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-warning text-white shadow card-hover">
                        <div class="card-body text-center">
                            <i class="fas fa-bus" style="font-size: 2.5rem;"></i>
                            <p class="mt-2">Unidades</p>
                        </div>
                    </div>
                </a>
            </div>

    <script>
        // Actualiza la fecha y hora actual
        const updateDateTime = () => {
            const now = new Date();
            document.getElementById("datetime").innerText = now.toLocaleString();
        };
        updateDateTime();
        setInterval(updateDateTime, 1000);
    </script>
</body>
</html>
