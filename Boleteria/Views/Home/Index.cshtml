@{
    ViewBag.Title = "Inicio - Puma Pardo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f9ff;
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container text-center mt-5">
        <h1 class="text-primary mb-4">Bienvenido a Puma Pardo</h1>
        <p>Selecciona una opción para continuar:</p>
        <div class="row mt-4 justify-content-center">
            <!-- Oficina -->
            <div class="col-md-2">
                <a asp-controller="Oficina" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <i class="bi bi-building" style="font-size: 2rem;"></i>
                            <p class="mt-2">Oficina</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Boletería -->
            <div class="col-md-2">
                <a asp-controller="Boleteria" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <i class="bi bi-ticket-perforated" style="font-size: 2rem;"></i>
                            <p class="mt-2">Boletería</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Facturas -->
            <div class="col-md-2">
                <a asp-controller="Facturas" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-secondary text-white">
                        <div class="card-body">
                            <i class="bi bi-file-earmark-text" style="font-size: 2rem;"></i>
                            <p class="mt-2">Facturas</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Equipo Puma -->
            <div class="col-md-2">
                <a asp-controller="EquipoPuma" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <i class="bi bi-people" style="font-size: 2rem;"></i>
                            <p class="mt-2">Equipo Puma</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Unidades de Bus -->
            <div class="col-md-2">
                <a asp-controller="UnidadesDeBus" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <i class="bi bi-bus-front" style="font-size: 2rem;"></i>
                            <p class="mt-2">Unidades de Bus</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
