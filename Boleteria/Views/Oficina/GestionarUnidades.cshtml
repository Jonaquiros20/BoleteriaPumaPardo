@{
    ViewData["Title"] = "Gestionar Unidades de Transporte";
}

<div class="container">
    <h1 class="text-center text-danger mt-4">Gestionar Unidades de Transporte</h1>
    <p class="text-center lead">Consulta o edita las unidades de transporte registradas.</p>

    <div class="mt-4">
        <!-- Botón para agregar nueva unidad -->
        <button class="btn btn-success mb-3">Registrar Nueva Unidad</button>

        <!-- Tabla para listar unidades -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Placa</th>
                    <th>Modelo</th>
                    <th>Capacidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>ABC-123</td>
                    <td>Mercedes-Benz</td>
                    <td>50</td>
                    <td>
                        <button class="btn btn-primary btn-sm">Editar</button>
                        <button class="btn btn-danger btn-sm">Eliminar</button>
                    </td>
                </tr>
                <!-- Más registros -->
            </tbody>
        </table>
    </div>
</div>
