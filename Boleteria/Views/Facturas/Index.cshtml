@{
    ViewData["Title"] = "Gestor de Facturas Interactivo";
}

<!-- Recursos CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">

<!-- Recursos JS -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<div class="container my-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 text-primary animate__animated animate__fadeInDown">
            <i class="fas fa-file-invoice-dollar me-2"></i>Gestor de Facturas 
        </h1>
        <button class="btn btn-primary btn-sm shadow" id="btnNuevaFactura">
            <i class="fas fa-plus-circle me-2"></i>Nueva Factura
        </button>
    </div>

    <!-- Proveedores Pagados -->
    <div class="mt-5">
        <h4 class="text-success">
            <i class="fas fa-check-circle me-2 animate__animated animate__fadeInLeft"></i>Proveedores Pagados
        </h4>
        <div class="accordion" id="pagadosAccordion">
            <!-- Ejemplo Proveedor Pagado -->
            <div class="accordion-item border-success">
                <h2 class="accordion-header" id="headingProveedor1">
                    <button class="accordion-button text-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseProveedor1" aria-expanded="true" aria-controls="collapseProveedor1">
                        <i class="fas fa-user-check me-2"></i>Juan Suministros
                    </button>
                </h2>
                <div id="collapseProveedor1" class="accordion-collapse collapse show" aria-labelledby="headingProveedor1" data-bs-parent="#pagadosAccordion">
                    <div class="accordion-body bg-light">
                        <table class="table table-hover align-middle">
                            <thead class="table-success">
                                <tr>
                                    <th>#</th>
                                    <th>Factura</th>
                                    <th>Fecha</th>
                                    <th>Total</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>FAC-00123</td>
                                    <td>2024-11-01</td>
                                    <td>$1,200.00</td>
                                    <td>
                                        <button class="btn btn-sm btn-secondary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>FAC-00124</td>
                                    <td>2024-11-15</td>
                                    <td>$800.00</td>
                                    <td>
                                        <button class="btn btn-sm btn-secondary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Proveedores Pendientes -->
    <div class="mt-5">
        <h4 class="text-warning">
            <i class="fas fa-exclamation-circle me-2 animate__animated animate__fadeInRight"></i>Proveedores Pendientes
        </h4>
        <div class="accordion" id="pendientesAccordion">
            <!-- Ejemplo Proveedor Pendiente -->
            <div class="accordion-item border-warning">
                <h2 class="accordion-header" id="headingProveedor3">
                    <button class="accordion-button text-warning collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseProveedor3" aria-expanded="false" aria-controls="collapseProveedor3">
                        <i class="fas fa-user-clock me-2"></i>Central de Papelería
                    </button>
                </h2>
                <div id="collapseProveedor3" class="accordion-collapse collapse" aria-labelledby="headingProveedor3" data-bs-parent="#pendientesAccordion">
                    <div class="accordion-body bg-light">
                        <table class="table table-hover align-middle">
                            <thead class="table-warning">
                                <tr>
                                    <th>#</th>
                                    <th>Factura</th>
                                    <th>Fecha</th>
                                    <th>Total</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>FAC-00340</td>
                                    <td>2024-11-10</td>
                                    <td>$600.00</td>
                                    <td>
                                        <button class="btn btn-sm btn-secondary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>FAC-00341</td>
                                    <td>2024-11-18</td>
                                    <td>$400.00</td>
                                    <td>
                                        <button class="btn btn-sm btn-secondary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Animaciones Interactivas -->
<script>
    $(document).ready(function () {
        // Botón para nueva factura
        $("#btnNuevaFactura").on("click", function () {
            alert("Funcionalidad de crear factura aún no implementada.");
        });

        // Animación en el encabezado al cargar
        $(".accordion-button").on("click", function () {
            $(this).toggleClass("animate__pulse");
        });
    });
</script>
