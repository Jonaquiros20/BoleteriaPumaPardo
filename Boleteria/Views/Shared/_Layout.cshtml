<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Puma Pardo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        /* Transición inicial para las vistas principales */
        body {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        /* Animación del menú */
        .navbar .nav-link {
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .navbar .nav-link.loaded {
                opacity: 1;
                transform: translateY(0);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Puma Pardo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Oficina"><i class="fas fa-building"></i> Oficina</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Boleteria"><i class="fas fa-ticket-alt"></i> Boletería</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Facturas/Index"><i class="fas fa-file-invoice"></i> Facturas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/EquipoPuma/Index"><i class="fas fa-users"></i> Equipo Puma</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/UnidadesDeBus/Index"><i class="fas fa-bus"></i> Unidades de Bus</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        // Animación inicial para que el contenido aparezca dinámicamente
        document.addEventListener("DOMContentLoaded", () => {
            // Efecto de entrada para el body
            document.body.style.opacity = "1";
            document.body.style.transform = "translateY(0)";

            // Efecto para los enlaces del menú
            const navLinks = document.querySelectorAll('.navbar .nav-link');
            navLinks.forEach((link, index) => {
                setTimeout(() => {
                    link.classList.add('loaded');
                }, 100 * index); // Delay escalonado
            });
        });
    </script>
</body>
</html>
